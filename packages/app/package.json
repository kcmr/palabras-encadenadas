{
  "name": "app",
  "version": "1.0.0",
  "source": "src/index.html",
  "private": true,
  "scripts": {
    "test": "is-ci-cli \"test:coverage\" \"test:watch\"",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "clean": "rimraf dist ../../.parcel-cache",
    "prestart": "npm run clean",
    "start": "parcel",
    "prebuild": "npm run clean",
    "build": "parcel build --public-url ${PUBLIC_URL:-https://palabras-encadenadas.app}",
    "launch:prod": "npm run build && npx http-server dist",
    "format": "prettier . --write",
    "lint": "eslint . --ignore-path ../../.gitignore --color --no-error-on-unmatched-pattern --max-warnings 0",
    "lint:fix": "eslint . --ignore-path ../../.gitignore --fix --no-error-on-unmatched-pattern",
    "check-types": "tsc"
  },
  "author": "Kus CÃ¡mara",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kcmr/palabras-encadenadas.git",
    "directory": "packages/app"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@parcel/transformer-inline-string": "^2.8.2",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.2.4",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.9",
    "@types/react-test-renderer": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.44.0",
    "@typescript-eslint/parser": "^5.44.0",
    "babel-jest": "^29.3.1",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest-dom": "^4.0.3",
    "eslint-plugin-react": "^7.31.11",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-testing-library": "^5.9.1",
    "identity-obj-proxy": "^3.0.0",
    "is-ci-cli": "^2.2.0",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "lint-staged": "^13.1.0",
    "parcel": "^2.8.0",
    "process": "^0.11.10",
    "react-test-renderer": "^18.2.0",
    "rimraf": "^3.0.2",
    "simple-git-hooks": "^2.8.1"
  },
  "dependencies": {
    "classnames": "^2.3.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "usehooks-ts": "^2.9.1",
    "vanilla-cookieconsent": "^2.8.9"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "pre-push": "npm run test:coverage"
  },
  "lint-staged": {
    "*": "prettier --ignore-unknown --write",
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix --max-warnings 0"
    ]
  }
}
